<%- include ('partials/header'); -%>
<h1>Compose</h1>

<form class="" action="/compose" method="post">
  <div class="form-group">
    <label>Title</label>
    <input class="form-control form-control-lg" type="text" name="postTitle" autocomplete="off" placeholder="title">
  </div>
  <div class="form-group">
    <label>Post</label>
    <textarea class="form-control form-control-lg" name="postBody" rows="8" cols="160"></textarea>
  </div>
  <button class="btn btn-primary" type="submit" name="button">Publish</button>
</form>

<%- include ('partials/footer'); -%>
